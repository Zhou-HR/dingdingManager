<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gdiot.ssm.dao.DingUserDataMapper">
    <resultMap type="com.gdiot.ssm.entity.DingUserPo" id="BaseResultMap">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="user_id" column="user_id" jdbcType="VARCHAR"/>
        <result property="user_detail" column="user_detail" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_Sql">
		id,user_id,user_detail
	</sql>

    <insert id="insertOne" parameterType="com.gdiot.ssm.entity.DingUserPo">
        insert into ding_user_detail (
        user_id,user_detail
        ) values (
        <if test="user_id != null">
            #{user_id,jdbcType=VARCHAR},
        </if>
        <if test="user_detail != null">
            #{user_detail,jdbcType=VARCHAR}
        </if>
        )
    </insert>

    <update id="updateDetail" parameterType="com.gdiot.ssm.entity.DingUserPo">
		update ding_user_detail 
		set user_detail=#{user_detail,jdbcType=VARCHAR}
		where user_id=#{user_id,jdbcType=VARCHAR}
	</update>

    <select id="selectOne" resultMap="BaseResultMap">
        select * from ding_user_detail
        where 1 = 1
        <if test="user_id != null">
            and user_id = #{user_id}
        </if>
        order by id desc
    </select>
</mapper>